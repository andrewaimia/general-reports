<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title><TMPL_VAR REPORTNAME></title>
    <script src="ChartNew.js"></script>
<link href="master.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h3>Net Worth Report</h3>
        <div class="row">
            <div class="col-xs-2"></div>
            <div class="col-xs-8">
                <table class "table-condensed">
                <tr><td><canvas id="reportChart" width="600" height="300"></canvas></td></tr>
                <tr><td>&nbsp;</td></tr>
                <tr><td><table class="table">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th class="text-right">Net Worth</th>
                  </tr>
                </thead>
                <tbody>
                    <TMPL_LOOP NAME=CONTENTS>
                    <tr>
                        <td><TMPL_VAR DATE></td>
                        <td class="money text-right"><TMPL_VAR NET_WORTH></td>
                    </tr>
                    </TMPL_LOOP>
                </tbody>                
                 </table>
            </div>
            <table class="table">
                <tbody>
                <TMPL_LOOP ERRORS>
                    <tr><td><h3><span class="label label-danger">Error</span></h3></td></tr>
                    <tr><td><TMPL_VAR ERROR></td></tr>
                </TMPL_LOOP>
                </tbody>
            </table>
        </div>
    </div>   
</body>
<script type="text/javascript">
    <!-- Format numbers -->
    function currency(n) {n = parseFloat(n); return isNaN(n) ? 0 : n.toFixed(2);}
    var elements= document.getElementsByClassName("money");
    for (var i = 0; i < elements.length; i++) {elements[i].innerHTML = currency(elements[i].innerHTML);}
    <!-- Chart -->
    var data = {<TMPL_VAR "TREND_DATA">};
    var options={bezierCurve: false};
    var ctx = document.getElementById("reportChart").getContext("2d");
    var reportChart = new Chart(ctx).Line(data, options);
</script>
</html>